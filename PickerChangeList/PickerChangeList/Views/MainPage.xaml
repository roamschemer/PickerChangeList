<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PickerChangeList.Views"
             x:Class="PickerChangeList.Views.MainPage"
             Title="Pickerで切り替えた奴をPickerやListViewに反映したい">
  <StackLayout>
    <Picker ItemsSource="{Binding Model1s}" 
            SelectedItem="{Binding Model1.Value}" 
            ItemDisplayBinding="{Binding Name}"/>
    <Label Text="{Binding Model1.Value.Name}"/>
    <Picker ItemsSource="{Binding Model1.Value.Model2s}"
            SelectedItem="{Binding Model2.Value}"
            ItemDisplayBinding="{Binding Name}"/>
    <Label Text="{Binding Model2.Value.Name}"/>
    <ListView ItemsSource="{Binding Model1.Value.Model2s}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Label Text="{Binding Name}"/>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <ListView ItemsSource="{Binding PageContentViewModels}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <views:PageContentView BindingContext="{Binding}"/>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>